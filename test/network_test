os.loadAPI("/apis/network")
os.loadAPI("/apis/model/position")

-- Mock --
mockPosition = {}
mockPosition.x = -1
mockPosition.y = -1
mockPosition.z = -1
function gps.locate()
    return mockPosition.x, mockPosition.y, mockPosition.z
end

print("test: network.getGpsLocation should return a position.Position")
mockPosition.x = 10
mockPosition.y = 12
mockPosition.z = 13

assert(network.getGpsLocation() == position.Position:new(10, 12, 13), "network.getGpsLocation did not return the expected value")

print("test: network.getGpsLocation should return an invalid position.Position in case the gps failed")
function gps.locate() return nil end
assert(network.getGpsLocation():isValid() == false, "expected an invalid position")